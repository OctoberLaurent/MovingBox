{% extends 'base.html.twig' %}

{% block title %}Boxes index{% endblock %}

{% block body %}
    <div class="container bg-white">
    <h1>Boxes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Name</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for box in boxes %}
            <tr>
                <td>{{ box.id }}</td>
                <td>{{ box.number }}</td>
                <td>{{ box.name }}</td>
                <td>{{ box.picture }}</td>
                <td>
                    <a href="{{ path('boxes_show', {'id': box.id}) }}">show</a>
                    <a href="{{ path('boxes_edit', {'id': box.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('boxes_new') }}">Create new</a>
    </div>
{% endblock %}
